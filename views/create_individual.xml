<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template
        id="ati_individual_registrant_form_template"
        inherit_id="g2p_service_provider_beneficiary_management.individual_registrant_form_template"
        customize_show="True"
        name="ati"
        priority="200">

        <xpath expr="//div[hasclass('main-container')]" position="replace">
            <div class="container-adjuster">
                <h5 class="all-title">Create New Farmer</h5>
                <div class="form-template">
                    <ol class="breadcrumb form-layout-breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/serviceprovider/home">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/serviceprovider/individual">Farmer</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Create New Farmer
                        </li>
                    </ol>
                    <form
                        id="creategroupForm"
                        action="/serviceprovider/individual/beneficiary/create/submit"
                        method="POST"
                        enctype="multipart/form-data" >
                        <input type="hidden" name="group_id" value="" />
                        <div class="row">

                            <div class="container-fluid">
                                <div class="rounded-card">
                                    <div class="sidebar">
                                        <ul class="nav flex-column">
                                            <li class="nav-item">
                                                <a class="nav-link active" href="#" onclick="showSection('id-section')">Id Section</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#" onclick="showSection('individual-details')">Individual Details</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#" onclick="showSection('family-members')">Family Members</a>
                                            </li>
                                             <li class="nav-item">
                                                <a class="nav-link" href="#" onclick="showSection('membership-details')">Membership Details</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#" onclick="showSection('land-information')">Land Information</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#" onclick="showSection('crop-information')">Crop Information</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#" onclick="showSection('livestock-information')">Livestock Information</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#" onclick="showSection('agricultural-input')">Agricultural Input</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#" onclick="showSection('access-to-resouce')">Access to Resource</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#" onclick="showSection('financial-service')">Financial Service</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#" onclick="showSection('socio-economic-data')">Socio Economic Data</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <main role="main" class="content">
                                        <div id="id-section" style="display: none;">
                                            <div class="row">
                                                <div class="col-lg-4">
                                                    <div class="s_website_form_field">
                                                        <label class="s_website_form_label" for="name">
                                                            <span class="s_website_form_label_content" style="color: #666666;">Do you have a national ID?</span>
                                                        </label>
                                                        <select
                                                            class="form-select"
                                                            name="have_national_id"
                                                            required="required"
                                                            id="have-national-id-selection">
                                                            <option value=" ">Select</option>
                                                            <t t-foreach="have_national_id" t-as="option">
                                                                <option t-att-value="option.id">
                                                                    <t t-esc="option.name" />
                                                                </option>
                                                            </t>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="s_website_form_field"
                                                        id="uid-div"
                                                        style="display: none;" >
                                                        <label class="s_website_form_label" for="name">
                                                            <span class="s_website_form_label_content" style="color: #666666;">UID</span>
                                                            <span class="s_website_form_mark"> *</span>
                                                        </label>
                                                        <input type="input"
                                                                id="uid_input"
                                                                name="uid"
                                                                class="form-control"
                                                                placeholder="UID"
                                                                required="required" />
                                                    </div>
                                                    <div class="error-message"
                                                        id="uid_error"
                                                        style="display: none;color: red;">
                                                        UID must be exactly 12 characters long.
                                                    </div>
                                                    <div
                                                        class="s_website_form_field"
                                                        id="rid-div"
                                                        style="display: none;"
                                                    >
                                                        <label class="s_website_form_label" for="name">
                                                            <span
                                                                class="s_website_form_label_content"
                                                                style="color: #666666;"
                                                            >RID
                                                            </span>
                                                        </label>
                                                        <input
                                                            type="text"
                                                            id="rid_input"
                                                            name="rid"
                                                            class="form-control"
                                                            placeholder="RID"
                                                        />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="individual-details" style="display: none;">
                                            <h2>Individual Details</h2>
                                            <p>Individual Details content goes here.</p>
                                        </div>
                                        <div id="family-members" style="display: none;">
                                            <h2>Family Members</h2>
                                            <p>Contact details content goes here.</p>
                                        </div>
                                         <div id="membership-details" style="display: none;">
                                            <h2>Family Members</h2>
                                            <p>Contact details content goes here.</p>
                                        </div>
                                        <div id="crop-information" style="display: none;">
                                            <h2>Geo Location</h2>
                                            <p>Geo location content goes here.</p>
                                        </div>
                                        <div id="livestock-information" style="display: none;">
                                            <h2>Social Status</h2>
                                            <p>Social status content goes here.</p>
                                        </div>
                                        <div id="agricultural-input" style="display: none;">
                                            <h2>Social Status</h2>
                                            <p>Social status content goes here.</p>
                                        </div>
                                         <div id="access-to-resouce" style="display: none;">
                                            <h2>Social Status</h2>
                                            <p>Social status content goes here.</p>
                                        </div>
                                        <div id="financial-service" style="display: none;">
                                            <h2>Financial Service</h2>
                                            <p>Social status content goes here.</p>
                                        </div>
                                        <div id="socio-economic-data" style="display: none;">
                                            <h2>Socio Economic Data</h2>
                                            <p>Socio Economic Datacontent goes here.</p>
                                        </div>
                                        </main>
                                    </div>
                                </div>

                            </div>

                            <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"/>
                            <link rel="stylesheet" href="/g2p_ati_service_provider_portal/static/src/css/style.css" />

                            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
                            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
                            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

                            <script
                                src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"
                            />
                            <script
                                type="text/javascript"
                                src="/g2p_service_provider_beneficiary_management/static/src/js/member_form.js"
                            />
                             <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
                              <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
                            <script
                                type="text/javascript"
                                src="/g2p_ati_service_provider_portal/static/src/js/side_nav_bar.js"
                            />

                            <script
                                type="text/javascript"
                                src="/g2p_ati_service_provider_portal/static/src/js/create_individual_validations.js"
                            />

                    </form>

                </div>
            </div>

        </xpath>
    </template>
</odoo>